generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String?  @unique
  subscription String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}

model PushSubscription {
  id           String   @id @default(cuid())
  userId       String?
  endpoint     String   @db.Text
  endpointHash String   @unique // SHA256 hash of endpoint for uniqueness
  p256dh       String   @db.Text
  auth         String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("push_subscriptions")
}

model Notification {
  id        String    @id @default(cuid())
  title     String
  body      String
  icon      String?
  badge     String?
  data      String?
  actions   String?   @db.Text // JSON string of actions array
  sent      Boolean   @default(false)
  sentAt    DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("notifications")
}
